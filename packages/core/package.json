{
  "name": "@mailtest/core",
  "version": "1.0.0",
  "description": "Core email validation library for mailtest",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "email",
    "validation",
    "validator",
    "email-validation",
    "typescript"
  ],
  "author": "Ali Kazmi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alikazmi/mailtest.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/alikazmi/mailtest/issues"
  },
  "homepage": "https://github.com/alikazmi/mailtest#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/mailcheck": "^1.1.37",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.12",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "disposable-email-domains": "^1.0.62",
    "mailcheck": "^1.1.1"
  }
}
